<!-- catIndex.ejs -->
<html>
  <head>
    <title>SignUp</title>

     <link href="styles.css" rel="stylesheet">
  </head>
  <body>

     <%- include("partials/errors.ejs") %>
    <form action="/signUp" method="post" class="form-example">
    <div class="form-example">
      <label for="fname">Enter your first name: </label>
      <input type="text" name="fname" id="fname" required />
    </div>
     <div class="form-example">
      <label for="lname">Enter your last name: </label>
      <input type="text" name="lname" id="lname" required />
    </div>
    <div class="form-example">
      <label for="email">Enter your username: </label>
      <input type="email" name="email" id="email" required />
    </div>
     <div class="form-example">
      <label for="password">Enter your password: </label>
      <input type="password" name="password" id="password" required />
    </div>
     <div class="form-example">
      <label for="confirmPassword">Enter your password: </label>
      <input type="confirmPassword" name="confirmPassword" id="confirmPassword" required />
    </div>
    <div>
    <input type="checkbox" id="admin" name="admin" checked />
    <label for="admin">Is Admin</label>
  </div>

    <div class="form-example">
      <input type="submit" value="Sign Up" />
    </div>
</form

  </body>
</html>